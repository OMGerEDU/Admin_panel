{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/whoami",
      "destination": "/api/v1?route=whoami"
    },
    {
      "source": "/api/v1",
      "destination": "/api/v1?route=index"
    },
    {
      "source": "/api/v1/:path*",
      "destination": "/api/v1?route=:path*"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ]
}